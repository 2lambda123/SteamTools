<UserControl
    Classes.IsActive="{Binding IsSelected}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="BD.WTTS.UI.Views.Controls.AuthenticatorItem"
    x:CompileBindings="True"
    x:DataType="spp:AuthenticatorItemModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:spp="https://steampp.net/ui"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Styles>
        <Style Selector="spp|AuthenticatorItem.IsActive">
            <Setter Property="RenderTransform" Value="scale(0.9)" />
        </Style>
        <Style Selector="spp|AuthenticatorItem:not(.IsActive)">
            <Setter Property="RenderTransform" Value="scale(1)" />
        </Style>

        <Style Selector="spp|AuthenticatorItem:pointerover">
            <Setter Property="RenderTransform" Value="scale(0.9)" />
        </Style>

        <Style Selector="spp|AuthenticatorItem">
            <Setter Property="RenderTransform" Value="scale(1)" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Duration="0:0:0.2" Property="RenderTransform" />
                </Transitions>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:3">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0.7" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>
    <StackPanel Spacing="3">
        <Border
            Background="Transparent"
            Height="200"
            Width="200">
            <Grid>
                <Viewbox
                    Height="32"
                    HorizontalAlignment="Left"
                    IsVisible="{Binding IsCloudAuth}"
                    VerticalAlignment="Top"
                    Width="32">
                    <ui:FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{StaticResource Cloud}" />
                </Viewbox>
                <Viewbox
                    Height="32"
                    HorizontalAlignment="Left"
                    IsVisible="{Binding !IsCloudAuth}"
                    VerticalAlignment="Top"
                    Width="32">
                    <ui:FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{StaticResource Dictionary}" />
                </Viewbox>
                <Arc
                    Height="200"
                    StartAngle="0"
                    Stretch="None"
                    Stroke="{DynamicResource ControlStrokeColorSecondaryBrush}"
                    StrokeThickness="10"
                    SweepAngle="360"
                    Width="200" />
                <Arc
                    FlowDirection="RightToLeft"
                    Height="200"
                    IsVisible="{Binding IsShowCode}"
                    StartAngle="270"
                    Stretch="None"
                    Stroke="{Binding StrokeColor}"
                    StrokeJoin="Round"
                    StrokeLineCap="Square"
                    StrokeThickness="10"
                    SweepAngle="{Binding Value}"
                    Width="200">
                    <Arc.Transitions>
                        <Transitions>
                            <DoubleTransition
                                Duration="0:0:0.8"
                                Easing="CircularEaseOut"
                                Property="SweepAngle" />
                        </Transitions>
                    </Arc.Transitions>
                </Arc>
                <StackPanel
                    HorizontalAlignment="Stretch"
                    Margin="10"
                    Spacing="3"
                    Tapped="InputElement_OnTapped"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontSize="30"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        HorizontalAlignment="Center"
                        Text="{Binding Text}"
                        VerticalAlignment="Center" />
                    <TextBlock
                        FontSize="14"
                        Foreground="{DynamicResource TextFillColorDisabledBrush}"
                        HorizontalAlignment="Center"
                        Text="点击以复制"
                        VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
        <Border
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            CornerRadius="20"
            Width="200">
            <TextBlock
                FontSize="20"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="{Binding AuthName}"
                TextAlignment="Center"
                VerticalAlignment="Center" />
        </Border>
    </StackPanel>
</UserControl>
