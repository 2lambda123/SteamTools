<UserControl
    x:Class="BD.WTTS.UI.Views.Pages.GeneralAuthenticatorImportPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://steampp.net/services"
    xmlns:spp="https://steampp.net/ui"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="spp:GeneralAuthenticatorImportViewModel"
    mc:Ignorable="d">
    <StackPanel
        Margin="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Spacing="30">
        <StackPanel.Styles>
            <Style Selector="Border">
                <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}" />
                <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
                <Setter Property="MinWidth" Value="300" />
            </Style>
        </StackPanel.Styles>
        <StackPanel Orientation="Horizontal">
            <Label VerticalAlignment="Center">1.</Label>
            <Border HorizontalAlignment="Center">
                <StackPanel
                    Margin="5"
                    Orientation="Horizontal"
                    Spacing="5">
                    <TextBlock VerticalAlignment="Center" Text="{ReflectionBinding Path=Res.GeneralAuth_Name, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
                    <TextBox
                        HorizontalContentAlignment="Center"
                        Text="{Binding AuthenticatorName}"
                        Watermark="{ReflectionBinding Path=Res.Warning_PleaseEnterAuthName,
                                                      Mode=OneWay,
                                                      Source={x:Static s:ResourceService.Current}}" />
                </StackPanel>
            </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label VerticalAlignment="Center">2.</Label>
            <ComboBox
                HorizontalContentAlignment="Center"
                ItemsSource="{Binding ImportAuthenticatorTypes}"
                SelectedItem="{Binding ImportAuthenticatorType}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label VerticalAlignment="Center">3.</Label>
            <Border HorizontalAlignment="Center">
                <StackPanel
                    Margin="5"
                    Orientation="Horizontal"
                    Spacing="5">
                    <TextBlock VerticalAlignment="Center" Text="{ReflectionBinding Path=Res.GeneralAuth_ImportText, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
                    <TextBox
                        HorizontalContentAlignment="Center"
                        Text="{Binding SecretCode}"
                        Watermark="{ReflectionBinding Path=Res.GeneralAuth_EnterkeyOrLink,
                                                      Mode=OneWay,
                                                      Source={x:Static s:ResourceService.Current}}" />
                </StackPanel>
            </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label VerticalAlignment="Center">4.</Label>
            <Button
                MinWidth="300"
                HorizontalAlignment="Center"
                Command="{Binding GenerateCode}"
                Content="{ReflectionBinding Path=Res.GeneralAuth_Code,
                                            Mode=OneWay,
                                            Source={x:Static s:ResourceService.Current}}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label VerticalAlignment="Center">5.</Label>
            <Border HorizontalAlignment="Center">
                <StackPanel Margin="10" Spacing="5">
                    <TextBlock HorizontalAlignment="Center" Text="{ReflectionBinding Path=Res.GeneralAuth_VerifySuccessfulImport, Mode=OneWay, Source={x:Static s:ResourceService.Current}}" />
                    <TextBox IsReadOnly="True" Text="{Binding CurrentCode}" />
                    <Button
                        HorizontalAlignment="Center"
                        Command="{Binding Import}"
                        Content="{ReflectionBinding Path=Res.ConfirmImport,
                                                    Mode=OneWay,
                                                    Source={x:Static s:ResourceService.Current}}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </StackPanel>
</UserControl>
