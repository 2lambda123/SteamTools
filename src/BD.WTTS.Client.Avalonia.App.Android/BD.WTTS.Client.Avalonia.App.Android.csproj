<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<RootNamespace>BD.WTTS.Droid</RootNamespace>
		<!-- ↓ Android 启动项目中 TargetFramework 值引入变量将导致 VS 17.7.4 项目无法启动 -->
		<TargetFramework>net7.0-android</TargetFramework>
		<SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
		<AssemblyName>Assembly-CSharp</AssemblyName>
		<OutputType>Exe</OutputType>
		<ApplicationId>net.steampp.app</ApplicationId>
		<!-- ↓ Version(Major一位+Minor两位+ver_for_rc两位+0+ver_for_preview两位) -->
		<ApplicationVersion>30003007</ApplicationVersion>
		<ApplicationDisplayVersion>3.0.0</ApplicationDisplayVersion>
		<AndroidPackageFormat>apk</AndroidPackageFormat>
		<AndroidEnableMultiDex>True</AndroidEnableMultiDex>
		<!--<AndroidCreatePackagePerAbi>True</AndroidCreatePackagePerAbi>-->
		<RuntimeIdentifiers>android-arm64;android-x64</RuntimeIdentifiers>
		<GeneratePackageOnBuild>false</GeneratePackageOnBuild>
	</PropertyGroup>

