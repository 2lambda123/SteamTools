<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="System.Application.UI.Styles.ThemeLight"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Color x:Key="Primary">#2196F3</Color>
    <!--  背景颜色  -->
    <Color x:Key="GreyWindowBackground">#F9F9F9</Color>
    <!--  主要文本  -->
    <Color x:Key="TextPrimary">#333333</Color>
    <!--  次要文本  -->
    <Color x:Key="TextSecondary">#666666</Color>
    <!--  点击文字颜色  -->
    <Color x:Key="TextLink">#007ffc</Color>
    <Color x:Key="ShellBackgroundColor">White</Color>
    <Color x:Key="ShellTitleColor">#222222</Color>
    <!--<Color x:Key="ShellForegroundColor">#767676</Color>-->
</ResourceDictionary>
