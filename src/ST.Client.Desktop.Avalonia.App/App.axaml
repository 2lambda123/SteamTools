<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:System.Application.UI"
             xmlns:converters="using:System.Application.Converters"
             xmlns:sty="using:FluentAvalonia.Styling"
             x:Class="System.Application.UI.App">
  <Application.DataTemplates>
    <ui:ViewLocator/>
  </Application.DataTemplates>
  <Application.Resources>
    <converters:IsNullConverter x:Key="IsNullConverter" />
    <converters:IsVisibleToOpacityConverter x:Key="IsVisibleToOpacityConverter" />
    <converters:IsReadOnlyPasswordBoxConverter x:Key="IsReadOnlyPasswordBoxConverter" />
    <converters:NameToFontFamilyConverter x:Key="NameToFontFamilyConverter" />
    <converters:DrawingKeyValueConverter x:Key="DrawingKeyValueConverter" />
    <converters:BitmapAssetValueConverter x:Key="BitmapAssetValueConverter" />
    <converters:GuidToUrlConverter x:Key="GuidToUrlConverter" />
    <converters:StringFormatConverter x:Key="StringFormatConverter" />
    <converters:EnumEqualValueConverter x:Key="EnumEqualValueConverter" />
    <converters:EnumDescriptionToNameConverter x:Key="EnumDescriptionToNameConverter" />
  </Application.Resources>
  <Application.Styles>
    <!--<FluentTheme Mode="Dark" />-->
    <sty:FluentAvaloniaTheme RequestedTheme="Dark"
                             UseUserAccentColorOnWindows="False"
                             UseSystemFontOnWindows="False"
                             UseSystemThemeOnWindows="False"/>

    <StyleInclude Source="avares://System.Application.SteamTools.Client.Avalonia/Application/UI/Styles/ThemeDark.xaml" />
    <StyleInclude Source="avares://System.Application.SteamTools.Client.Avalonia/Application/UI/Styles/ThemeAccent.xaml" />

    <!--<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>-->
    <!--<StyleInclude Source="avares://AvaloniaEdit/AvaloniaEdit.xaml"/>-->

    <StyleInclude Source="avares://System.Application.SteamTools.Client.Avalonia/Application/UI/Styles/Controls.xaml" />

  </Application.Styles>
  <!-- (NativeMenu.Menu) https://github.com/AvaloniaUI/Avalonia/issues/3541 -->
  <!--<NativeMenu.Menu>
    <NativeMenu>
      <NativeMenuItem Header="About My App" Command="{Binding AboutCommand}" />
    </NativeMenu>
  </NativeMenu.Menu>-->
</Application>
