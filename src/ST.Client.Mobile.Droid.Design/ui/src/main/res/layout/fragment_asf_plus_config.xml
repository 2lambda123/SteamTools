<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:xamarin="http://schemas.xamarin.com/android/xamarin/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/grey_window_background">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tvASFVersion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/settings_ui_subtitle_margin_start"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:layout_marginBottom="@dimen/settings_ui_subtitle_margin_bottom"
      android:textColor="?colorPrimary"
      android:textSize="@dimen/settings_ui_subtitle_font_size"
      tools:text="当前 ArchiSteamFarm 版本：x.x.x.x"
      xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

    <FrameLayout
      android:id="@+id/layoutRootASFSettingsAutoRunArchiSteamFarm"
      android:layout_width="match_parent"
      android:layout_height="@dimen/preference_button_height_large"
      android:background="?android:windowBackground"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="@dimen/settings_ui_icon_size"
          android:layout_height="@dimen/settings_ui_icon_size"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          app:srcCompat="@drawable/baseline_update_black_24"
          app:tint="@color/icon_background"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvASFSettingsAutoRunArchiSteamFarm"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:ellipsize="end"
          android:maxWidth="@dimen/settings_ui_item_switch_title_width_with_icon"
          android:maxLines="2"
          android:textColor="@color/text_primary"
          android:textSize="@dimen/settings_ui_item_title_font_size"
          tools:text="程序启动时自动运行 ASF"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

        <Space
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="1" />

        <com.google.android.material.switchmaterial.SwitchMaterial
          android:id="@+id/swASFSettingsAutoRunArchiSteamFarm"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          android:background="@null"
          android:clickable="false"
          android:focusable="false"
          tools:checked="true"
          xamarin:managedType="Google.Android.Material.SwitchMaterial.SwitchMaterial" />
      </LinearLayout>
    </FrameLayout>

    <FrameLayout
      android:id="@+id/layoutRootGoToWebUIGlobalSettings"
      android:layout_width="match_parent"
      android:layout_height="@dimen/preference_button_height_large"
      android:background="?android:windowBackground"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="@dimen/settings_ui_icon_size"
          android:layout_height="@dimen/settings_ui_icon_size"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          app:srcCompat="@drawable/round_open_in_browser_black_24"
          app:tint="@color/icon_background"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvGoToWebUIGlobalSettings"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          android:ellipsize="end"
          android:maxLines="1"
          android:textColor="@color/text_primary"
          android:textSize="@dimen/settings_ui_item_title_font_size"
          tools:text="跳转到 WebUI 全局设置 跳转到 WebUI 全局设置 跳转到 WebUI 全局设置 "
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
      </LinearLayout>
    </FrameLayout>

    <FrameLayout
      android:id="@+id/layoutRootImportASFBot"
      android:layout_width="match_parent"
      android:layout_height="@dimen/preference_button_height_large"
      android:background="?android:windowBackground"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="@dimen/settings_ui_icon_size"
          android:layout_height="@dimen/settings_ui_icon_size"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          app:srcCompat="@drawable/ic_baseline_note_add_24"
          app:tint="@color/icon_background"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvImportASFBot"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          android:ellipsize="end"
          android:maxLines="1"
          android:textColor="@color/text_primary"
          android:textSize="@dimen/settings_ui_item_title_font_size"
          tools:text="导入已有的 ASF Bot 文件"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
      </LinearLayout>
    </FrameLayout>

    <FrameLayout
      android:id="@+id/layoutRootSetCryptKey"
      android:layout_width="match_parent"
      android:layout_height="@dimen/preference_button_height_large"
      android:background="?android:windowBackground"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="@dimen/settings_ui_icon_size"
          android:layout_height="@dimen/settings_ui_icon_size"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          app:srcCompat="@drawable/ic_baseline_security_24"
          app:tint="@color/icon_background"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

        <LinearLayout
          android:id="@+id/layoutUISettingsLanguage"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:orientation="vertical">

          <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSetCryptKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/settings_ui_item_title_font_size"
            tools:text="设置自定义密钥"
            xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

          <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSetCryptKeyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASF_CRYPTKEY"
            android:textColor="@color/text_secondary"
            tools:ignore="HardcodedText"
            xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
        </LinearLayout>
      </LinearLayout>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tvConsoleSettings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/settings_ui_subtitle_margin_start"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:layout_marginBottom="@dimen/settings_ui_subtitle_margin_bottom"
      android:textColor="?colorPrimary"
      android:textSize="16sp"
      tools:text="控制台设置"
      xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/preference_button_height_large"
      android:background="?android:windowBackground">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvASFSettingsConsoleFontSize"
          android:layout_width="@dimen/settings_ui_item_textbox_title_width"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/settings_ui_subtitle_margin_start"
          android:ellipsize="end"
          android:maxLines="2"
          android:textColor="@color/text_primary"
          android:textSize="@dimen/settings_ui_item_title_font_size"
          tools:text="控制台字体大小"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

        <com.google.android.material.textfield.TextInputLayout
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:paddingBottom="@dimen/settings_ui_item_textbox_fix_material_bottom"
          app:boxBackgroundMode="filled">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tbASFSettingsConsoleFontSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:digits="0123456789"
            android:inputType="number"
            android:maxLength="2"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/settings_ui_item_title_font_size"
            tools:text="14"
            xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

        </com.google.android.material.textfield.TextInputLayout>

      </LinearLayout>
    </FrameLayout>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/preference_button_height_large"
      android:background="?android:windowBackground">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvASFSettingsConsoleMaxLine"
          android:layout_width="@dimen/settings_ui_item_textbox_title_width"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/settings_ui_subtitle_margin_start"
          android:ellipsize="end"
          android:maxLines="2"
          android:textColor="@color/text_primary"
          android:textSize="@dimen/settings_ui_item_title_font_size"
          tools:text="控制台显示行数"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

        <com.google.android.material.textfield.TextInputLayout
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:paddingBottom="@dimen/settings_ui_item_textbox_fix_material_bottom"
          app:boxBackgroundMode="filled">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tbASFSettingsConsoleMaxLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:digits="0123456789"
            android:inputType="number"
            android:maxLength="3"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/settings_ui_item_title_font_size"
            tools:text="200"
            xamarin:managedType="Google.Android.Material.TextField.TextInputEditText" />

        </com.google.android.material.textfield.TextInputLayout>

      </LinearLayout>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tvStorageSpace"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/settings_ui_subtitle_margin_start"
      android:layout_marginTop="@dimen/activity_vertical_margin"
      android:layout_marginBottom="@dimen/settings_ui_subtitle_margin_bottom"
      android:textColor="?colorPrimary"
      android:textSize="16sp"
      tools:text="ASF 存储空间"
      xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />

    <FrameLayout
      android:id="@+id/layoutRootOpenDirASFConfig"
      android:layout_width="match_parent"
      android:layout_height="@dimen/preference_button_height_large"
      android:background="?android:windowBackground"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="@dimen/settings_ui_icon_size"
          android:layout_height="@dimen/settings_ui_icon_size"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          app:srcCompat="@drawable/baseline_folder_black_24"
          app:tint="@color/icon_background"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvOpenDirASFConfig"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          android:ellipsize="end"
          android:maxLines="1"
          android:textColor="@color/text_primary"
          android:textSize="@dimen/settings_ui_item_title_font_size"
          tools:text="打开 ASF Config 文件夹"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
      </LinearLayout>
    </FrameLayout>

    <FrameLayout
      android:id="@+id/layoutRootOpenDirASFPlugin"
      android:layout_width="match_parent"
      android:layout_height="@dimen/preference_button_height_large"
      android:background="?android:windowBackground"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="@dimen/settings_ui_icon_size"
          android:layout_height="@dimen/settings_ui_icon_size"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          app:srcCompat="@drawable/baseline_folder_black_24"
          app:tint="@color/icon_background"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvOpenDirASFPlugin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          android:ellipsize="end"
          android:maxLines="1"
          android:textColor="@color/text_primary"
          android:textSize="@dimen/settings_ui_item_title_font_size"
          tools:text="打开 ASF Plugin 文件夹"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
      </LinearLayout>
    </FrameLayout>

    <FrameLayout
      android:id="@+id/layoutRootOpenDirASFLog"
      android:layout_width="match_parent"
      android:layout_height="@dimen/preference_button_height_large"
      android:background="?android:windowBackground"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="@dimen/settings_ui_icon_size"
          android:layout_height="@dimen/settings_ui_icon_size"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          app:srcCompat="@drawable/baseline_folder_black_24"
          app:tint="@color/icon_background"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvOpenDirASFLog"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          android:ellipsize="end"
          android:maxLines="1"
          android:textColor="@color/text_primary"
          android:textSize="@dimen/settings_ui_item_title_font_size"
          tools:text="打开 ASF Log 文件夹"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
      </LinearLayout>
    </FrameLayout>

    <FrameLayout
      android:id="@+id/layoutRootOpenDirASFWebUI"
      android:layout_width="match_parent"
      android:layout_height="@dimen/preference_button_height_large"
      android:background="?android:windowBackground"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?android:attr/selectableItemBackground">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
          android:layout_width="@dimen/settings_ui_icon_size"
          android:layout_height="@dimen/settings_ui_icon_size"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          app:srcCompat="@drawable/baseline_folder_black_24"
          app:tint="@color/icon_background"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatImageView" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tvOpenDirASFWebUI"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          android:ellipsize="end"
          android:maxLines="1"
          android:textColor="@color/text_primary"
          android:textSize="@dimen/settings_ui_item_title_font_size"
          tools:text="打开 ASF WebUI 文件夹"
          xamarin:managedType="AndroidX.AppCompat.Widget.AppCompatTextView" />
      </LinearLayout>
    </FrameLayout>

  </LinearLayout>
</androidx.core.widget.NestedScrollView>